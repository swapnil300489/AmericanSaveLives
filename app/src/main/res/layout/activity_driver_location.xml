<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlack">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_back"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:src="@drawable/arrow_left_black"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Select Taxi"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:background="@color/colorWhite">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/id_driverProfile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/id_driverName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:hint="X5"
                android:textSize="20dp"
                android:textColor="@color/colorBlack"
                android:fontFamily="serif"
                />



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/colorWhite">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:padding="10dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rate : "
                            android:textColor="@color/colorBlack"
                            android:padding="10dp"
                            android:textSize="17sp"
                            android:fontFamily="serif"
                            />

                        <TextView
                            android:id="@+id/id_Rate"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:hint="Rate  "
                            android:textColor="@color/colorBlack"
                            android:padding="10dp"
                            android:textSize="17sp"
                            android:fontFamily="serif"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/id_reviewLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:layout_gravity="center">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Review : "
                            android:textColor="@color/colorBlack"
                            android:padding="10dp"
                            android:textSize="17sp"
                            android:fontFamily="serif"
                            />

                        <TextView
                            android:id="@+id/id_Review"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:hint="Review "
                            android:textColor="@color/colorBlack"
                            android:padding="10dp"
                            android:textSize="17sp"
                            android:fontFamily="serif"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        >


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vehicle Type : "
                            android:textColor="@color/colorBlack"
                            android:padding="10dp"
                            android:textSize="17sp"
                            android:fontFamily="serif"
                            />

                        <TextView
                            android:id="@+id/id_CarCompany"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:hint="Car Company "
                            android:textColor="@color/colorBlack"
                            android:padding="10dp"
                            android:textSize="17sp"
                            android:fontFamily="serif"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:layout_gravity="center">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Driver Licence : "
                            android:textColor="@color/colorBlack"
                            android:padding="10dp"
                            android:textSize="17sp"
                            android:fontFamily="serif"
                            />

                        <TextView
                            android:id="@+id/id_Licence"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:hint="Drvier Licence"
                            android:textColor="@color/colorBlack"
                            android:padding="10dp"
                            android:textSize="17sp"
                            android:fontFamily="serif"
                            />

                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/id_bookButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Next"
                        android:gravity="center"
                        android:padding="10dp"
                        android:background="@color/colorBlack"
                        android:textColor="@color/colorWhite"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="serif"
                        />

                    <TextView
                        android:id="@+id/id_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Driver Location"
                        android:padding="10dp"
                        android:gravity="center"
                        android:textSize="17sp"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="serif"
                        />

                    <com.google.android.gms.maps.MapView
                        android:id="@+id/mapView"
                        android:layout_below="@+id/id_text"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:clickable="true"
                        android:enabled="true" />
                </RelativeLayout>



            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</LinearLayout>